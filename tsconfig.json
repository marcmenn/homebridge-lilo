{
  "extends": "@tsconfig/node16/tsconfig.json",
  "compilerOptions": {
    "target": "es2019",
    "outDir": "lib",
    "module": "ESNext",
    "moduleResolution": "node",
    "types": [
      "node"
    ],
    "sourceMap": true,
    "esModuleInterop": true
  },
  "strict": true,
  "forceConsistentCasingInFileNames": true,
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
